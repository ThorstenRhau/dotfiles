[delta "modus-vivendi"]
	blame-palette = "#000000 #1e1e1e #303030 #646464 #989898"
	commit-decoration-style = "#646464" bold box ul
	dark = true
	file-decoration-style = "#646464"
	file-style = "#ffffff"
	hunk-header-decoration-style = "#646464" box ul
	hunk-header-file-style = bold
	hunk-header-line-number-style = bold "#989898"
	hunk-header-style = file line-number syntax
	line-numbers-left-style = "#646464"
	line-numbers-minus-style = bold "#ff5f59"
	line-numbers-plus-style = bold "#44bc44"
	line-numbers-right-style = "#646464"
	line-numbers-zero-style = "#989898"
	minus-style = syntax "#4f1119"
	minus-non-emph-style = syntax "#4f1119"
	minus-emph-style = bold syntax "#781a1f"
	minus-empty-line-marker-style = syntax "#4f1119"
	plus-style = syntax "#00381f"
	plus-non-emph-style = syntax "#00381f"
	plus-emph-style = bold syntax "#034f2f"
	plus-empty-line-marker-style = syntax "#00381f"
	map-styles = \
		bold purple => syntax "#5c4f6a", \
		bold blue => syntax "#4f5a7a", \
		bold cyan => syntax "#4f6066", \
		bold yellow => syntax "#5d5740"
	# Should match the name of the bat theme
	syntax-theme = modus_vivendi

